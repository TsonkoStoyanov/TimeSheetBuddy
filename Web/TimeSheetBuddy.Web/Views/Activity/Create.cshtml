@model ActivityInputModel

@{
    ViewData["Title"] = "Create";
}

<div class="wrapper">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">

                <h4>Create Activity</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ActivityDesc"></label>
                    <input asp-for="ActivityDesc" class="form-control" />
                    <span asp-validation-for="ActivityDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeWorked"></label>
                    <input class="form-control" type="number" asp-for="TimeWorked" placeholder="Can only be between 1 .. 8" />
                    <span asp-validation-for="TimeWorked" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
